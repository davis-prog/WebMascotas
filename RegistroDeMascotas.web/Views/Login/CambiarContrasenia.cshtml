
@{
    ViewBag.Title = "Credenciales";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Usuario <small>Credenciales</small></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="#">Usuario</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container">

        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <form id="frm-actualizar">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h5 class="card-title m-0">Actualizar Credenciales</h5>
                        </div>
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label> Pregunta de Seguridad </label>
                                        <select id="cbo-preguntadeseguridad" name="preguntadeseguridad" class="form-control select2"  style="width: 100%;">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>  Respuesta de Seguridad </label>
                                        <input id="txt-respuestadeseguridad" name="respuestadeseguridad" type="text" class="form-control" maxlength="100">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Contraseña </label>
                                        <input id="txt-contrasenia" name="contrasenia" type="password" class="form-control " maxlength="5">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Repetir Contraseña </label>
                                        <input id="txt-repetircontrasenia" name="repetircontrasenia" type="password" class="form-control" maxlength="5">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-success btn-block">Actualizar</button>
                                </div>
                                <div class="col-md-2">
                                    <button id="btn-cancelar" type="button" class="btn btn-danger btn-block">Cancelar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-2"></div>

        </div>



    </div> 
</div>
<!-- /.content -->
@section scripts{

    <script src="@Url.Content("~/Assets/dist/js/pages/CambiarContrasenia.js")"></script>
    <script>
        pageCambiarContrasenia.init();


    </script>
}
