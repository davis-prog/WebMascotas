
@{
    ViewBag.Title = "Reportes";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Reporte Mascotas </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Buscador de Mascotas</a></li>
                    <li class="breadcrumb-item"><a href="#">Reporte</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container">

        <div class="row"> 
            <div class="col-lg-2 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3 id="MR">0</h3>

                        <p>Mascotas Registradas</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer"></a>
                </div>
            </div>
            <div class="col-lg-2 col-6">
                <div class="small-box bg-gradient-indigo">
                    <div class="inner">
                        <h3 id="MReportadas">0</h3>

                        <p>Mascotas Reportadas</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer"></a>
                </div>
            </div>
            <div class="col-lg-2 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3 id="ME">0</h3>

                        @*<h3 id="ME">0<sup style="font-size: 20px">%</sup></h3>*@

                        <p>Mascotas Encontradas</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer"></a>
                </div>
            </div>
            <div class="col-lg-2 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3 id="MP">0</h3>

                        @*<h3 id="MP">0<sup style="font-size: 20px">%</sup></h3>*@

                        <p>Mascotas Perdidas</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer"></a>
                </div>
            </div>
            <div class="col-lg-2 col-6">
                <div class="small-box bg-gradient-warning">
                    <div class="inner">
                        <h3 id="UR">0</h3>

                        <p>Usuarios Registrados</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer"></a>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 id="titulo1" class="card-title">Distritos con mascotas perdidas</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label> Año </label>
                                    <div class="input-group date" id="txt-fecha" data-target-input="nearest">
                                        <input type="text" name="fecha" class="form-control form-control-sm datetimepicker-input" data-target="#txt-fecha" />
                                        <div class="input-group-append" data-target="#txt-fecha" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label> Estado </label>
                                    <input id="checkbox-reportar" type="checkbox" name="checkbox-reportar" unchecked
                                           data-width="100%"
                                           data-bootstrap-switch
                                           data-on-color="success" data-on-text="Encontrado"
                                           data-off-color="danger" data-off-text="Perdido">
                                </div>
                            </div>
                        </div>

                        <br />

                        <canvas id="pieChartP" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>

                        <canvas id="pieChartE" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>


                    </div>
                </div>

            </div>

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title">Mascotas en meses perdidos y encontrados</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label> Año </label>
                                    <div class="input-group date" id="txt-fecha2" data-target-input="nearest">
                                        <input type="text" name="fecha2"  class="form-control form-control-sm datetimepicker-input" data-target="#txt-fecha2" />
                                        <div class="input-group-append" data-target="#txt-fecha2" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div> 

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="color:white;"> Año </label>
                                    <button type="button" id="btn-anio" class="btn btn-block bg-gradient-success btn-sm">Buscar</button> 
                                </div>
                            </div>
                        </div>

                        <div id="divChart" class="chart">
                            <canvas id="stackedBarChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header border-0">
                        <p class="mb-1">Mascotas con total de dias perdidos y encontrados</p>

                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn bg-olive active">
                                <input type="radio" name="options" id="option_b1" autocomplete="off" checked="" value="null"> Todos
                            </label>
                            <label class="btn bg-olive">
                                <input type="radio" name="options" id="option_b2" autocomplete="off" value="0"> Perdidos
                            </label>
                            <label class="btn bg-olive">
                                <input type="radio" name="options" id="option_b3" autocomplete="off" value="1"> Encontrados
                            </label>
                        </div>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table id="tblReporteDias" class="table table-striped table-valign-middle">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>F. Perdida</th>
                                    <th>F. Encontrado</th>
                                    <th>Dias</th>
                                    <th>Distrito</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>


            </div>
            <div class="col-lg-2"></div>

        </div>



    </div>
</div>

<!-- /.content -->



@section scripts{
    <script src="@Url.Content("~/Assets/dist/js/pages/Reportes.js")"></script>

    <script>
        pageReporte.init();


    </script>
}